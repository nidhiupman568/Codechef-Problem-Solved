#include <iostream>
using namespace std;

bool azsxdcfvgb(const string& qaz, int wsx) {
    int edc = 0;
    bool rfv = false;

    for (char tgb : qaz) {
        if (tgb == '1') {
            edc = wsx;
        } else if (edc > 0) {
            edc--;
        } else {
            rfv = true;
        }
    }

    return !rfv;
}

int main() {
    int yhn;
    cin >> yhn;

    while (yhn--) {
        int ujm, ik;
        cin >> ujm >> ik;
        string nmmb;
        cin >> nmmb;

        if (nmmb[0] == '0') {
            cout << "NO" << endl;
            continue;
        }

        cout << (azsxdcfvgb(nmmb, ik) ? "YES" : "NO") << endl;
    }

    return 0;
}
