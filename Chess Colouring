#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

int main() {
    int t;
    long long n;
    cin>>t;
    while(t--) {
        cin>>n;
        if(n%2 == 0) {
            cout<<2<<endl;
        }
        else {
            long long half = (n*n)/2;
            cout<<(half+2)<<endl;
        }
    }
    return 0;
}
