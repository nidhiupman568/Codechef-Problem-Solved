#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	cin.ignore();
	while(t--)
	{
	   int n,c=1;
	   cin>>n;
	   string s;
	   cin>>s;
	   
	   for(int i=0;i<n-1;i++)
	   {
	       if(s[i]=='1' && s[i+1]=='0')
	       {
	           c++;
	       }
	   }
	   cout<<c<<endl;
	   
	}
	
	return 0;
}
