#include <iostream>
/////////////////////////////////////////////////
#include <unordered_map>
/////////////////////////////////////////////////
#include <vector>
///////////////////////////////////////////////////

////////////////////////////////////////////////////
// Function to read vector elements
//////////////////////////////////////////////////////////////////
void readVector(std::vector<int>& vec, int size) {
    //////////////////////////////////////////////////////
    for (int qaz = 0; qaz < size; ++qaz) {
        ///////////////////////////////////////////////
        std::cin >> vec[qaz];
        /////////////////////////////////////////////////
    }
    ///////////////////////////////////////////////////
}
/////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////
// Function to calculate maximum nutrition values
//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
int calculateMaxNutrition(int RV, const std::vector<int>& wsx, const std::vector<int>& edc) {
    std::unordered_map<int, int> tgb;
    /////////////////////////////////////////////////////////

/////////////////////////////////////////////////////////////
    for (int yhn = 0; yhn < RV; ++yhn) {
        ///////////////////////////////////////
        int ujm = wsx[yhn];
        ///////////////////////////////////////////////////////
        tgb[ujm] = std::max(tgb[ujm], edc[yhn]);
        ///////////////////////////////////////////////
    }
    /////////////////////////////////

////////////////////////////////////////
    int plm = 0;
    //////////////////////////////////////////////
    for (const auto& ojn : tgb) {
        ////////////////////////////////////////////
        plm += ojn.second;
        ////////////////////////////////////////
    }
    /////////////////////////////////////////////

//////////////////////////////////////////////
    return plm;
    /////////////////////////////////////
}
//////////////////////////////////////////

//////////////////////////////////////
int main() {
    ///////////////////////////////////////
    int uhb;
    ///////////////////////////////////////////
    std::cin >> uhb;
    ////////////////////////////////////////////

/////////////////////////////////////////////////////
    while (uhb--) {
        ///////////////////////////////////////
        int ygv;
        ////////////////////////////////
        std::cin >> ygv;
        //////////////////////////////////////////////

//////////////////////////////////////////////////////
        std::vector<int> tfc(ygv);
        /////////////////////////////////////////////////////
        std::vector<int> rdx(ygv);
        ////////////////////////////////////////////////////////////

///////////////////////////////////////////////////////////////////////////
        // Read item types and their corresponding nutrition values
        ////////////////
        readVector(tfc, ygv);
        readVector(rdx, ygv);

        // Calculate maximum nutrition values and display the result
        int esz = calculateMaxNutrition(ygv, tfc, rdx);
        std::cout << esz << std::endl;
    }

    return 0;
}
