#include <bits/stdc++.h>
using namespace std;

int main() {
	
       int t;
       cin>>t;
       
       while(t--) {
               
             int n, x;
             cin>>n>>x;
             int *arr = new int[n];
             for(int i=0;i<n;i++) {
                     cin>>arr[i];
             }
             
             int sum = 0;
             for(int i=0;i<n;i++) {
                     sum+=arr[i];
             }
             if(sum%x==0) cout<<sum/x<<endl;
             else cout<<(sum/x)+1<<endl;
               
       }
        
        
}
