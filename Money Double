#include <bits/stdc++.h>
using namespace std;
#define int long long int
void solve() {
	int x, y;
	cin >> x >> y;
	int am = x;
	for (int i = 1; i <= y; i++) {
		if (2 * am > am + 1000) {
			am = am * 2;
		}
		else
			am = am + 1000;
	}
	cout<<am<<endl;



}



signed main() {
	int t;
	cin >> t;
	while (t--) {
		solve();
	}



#ifndef ONLINE_JUDGE
	//	for getting input from input.txt
	freopen("input.txt", "r", stdin);
	freopen("output.txt", "w", stdout);
#endif




}
