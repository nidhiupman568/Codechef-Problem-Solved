#include <iostream>

using namespace std;



int main() {

	// your code goes here

	int t;

	cin>>t;

	while(t--){

	    int n;cin>>n;

	    string s;cin>>s;

	    int c=0;

	    for(int i=0;i<n;i++){

	        for(int j=i+1;j<=i+9 && j<n; j++){

	            if(abs(s[i]-s[j]) == j-i){

	                c++;

	            }

	        }

	    }

	    cout<<c<<endl;

	}

	return 0;

}
