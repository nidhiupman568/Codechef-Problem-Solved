#include <bits/stdc++.h>
using namespace std;
int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--)
	{
	    int a,b,c,m;
	    cin>>a>>b>>c>>m;
	    bool flag=false;
	    for(int i=0;i<=m;i++)
	    {
	        if(abs(a-b)==i||abs(b-c)==i||abs(c-a)==i)
	        {
	            flag=true;
	            break;
	        }
	    }
	    if(flag) cout<<"YES"<<endl;
	    else cout<<"NO"<<endl;
	}
   return 0;
}
