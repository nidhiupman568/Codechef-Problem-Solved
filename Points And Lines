#include<bits/stdc++.h>
using namespace std;
int main() {
	int T;
	cin>>T;
	while(T>0){
	    int n;
	    cin>>n;
	    unordered_set<int> s1,s2;
	    for (int i = 0; i < n; ++i)
	    {
	    	int a,b;
	    	cin>>a>>b;
	    	s1.insert(a);
	    	s2.insert(b);
	    }
	    cout<<s1.size()+s2.size()<<endl;
	    T--;
	}
	return 0;
}
