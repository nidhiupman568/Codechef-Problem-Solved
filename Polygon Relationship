#include <bits/stdc++.h>

#define ll long long int

using namespace std;



int main() 

{

	ll t,n,i,j,k;

	cin >> t;

	while(t--)

	{

	    cin >> n;

	    for(i=0;i<n;i++)

	    {

	        ll x,y;

	        cin >> x >> y;

	    }

	    ll sum=0ll;

	    while(n>=3)

	    {

	        sum+=n;

	        n/=2;

	    }

	    cout << sum << "\n";

	}

	return 0;

}
